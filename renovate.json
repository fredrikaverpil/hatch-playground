{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],

  "pip-compile": {
    "fileMatch": ["(^|/)requirements\\.in$"]
  },

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "branchTopic": "pip-compile-refresh",
    "commitMessageAction": "Refresh pip-compile outputs"
  },

  "packageRules": [
    {
      "matchManagers": ["pip_requirements"],
      "enabled": false
    }
  ]
}
